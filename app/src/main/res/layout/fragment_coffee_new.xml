<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e5fde5"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/rg_accept1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ececec"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="10dp">

        <RadioButton
            android:id="@+id/rb_search"
            style="@style/RadioButtonMainTab"
            android:drawableTop="@drawable/ic_search"
            android:text="搜索" />

        <RadioButton
            android:id="@+id/rb_coffee1"
            style="@style/RadioButtonMainTab"
            android:drawableTop="@drawable/ic_git"
            android:text="沟通" />

        <RadioButton
            android:id="@+id/rb_voice1"
            style="@style/RadioButtonMainTab"
            android:drawableTop="@drawable/ic_activity"
            android:text="倾听" />
    </RadioGroup>

    <View

        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#a9a9a9" />

    <FrameLayout
        android:id="@+id/layout_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>




</LinearLayout>